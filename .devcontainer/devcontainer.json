{
  "name": "chat-server-go-dev",
  "dockerComposeFile": "devcontainer.compose.yaml",
  "service": "app",
  "workspaceFolder": "/workspaces/workspace",
  "runServices": ["app", "postgres", "redis", "minio"],
  "forwardPorts": [8080, 8081, 5432, 6379, 9000],
  "remoteUser": "vscode",
  "postCreateCommand": "go mod download",
  "customizations": {
    "vscode": {
      "settings": {
        "go.useLanguageServer": true,
        "go.toolsManagement.autoUpdate": true
      },
      "extensions": ["golang.go"]
    }
  }
}