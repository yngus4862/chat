# filename: .devcontainer/.env.example
DOMAIN=chat.company.local
TZ=Asia/Seoul

# 영속 데이터 (권장: workspace/.data)
DATA_ROOT=../.data

# TLS 인증서 마운트 경로(.devcontainer 기준 상대경로)
TLS_CERT_PATH=./certs/tls.crt
TLS_KEY_PATH=./certs/tls.key

# 업로드 제한(단건 300MB -> 400MB 권장)
NGINX_CLIENT_MAX_BODY_SIZE=400m

# ===== Host에서 실행 중인 앱(.NET) 프록시 대상 =====
# 보안상 권고: 앱은 host에서 127.0.0.1로만 바인딩
CHAT_API_UPSTREAM=host.docker.internal:18080
REALTIME_UPSTREAM=host.docker.internal:18081

# ===== Postgres =====
POSTGRES_DB=chat
POSTGRES_USER=chat
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# Keycloak DB를 같은 Postgres에 생성
KEYCLOAK_DB=keycloak
KEYCLOAK_DB_USER=keycloak
KEYCLOAK_DB_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===== Redis =====
REDIS_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===== Keycloak =====
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ===== MinIO =====
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD
MINIO_BUCKET_ATTACHMENTS=attachments

# MinIO: 최신 이미지에서 curl/wget 제거 → healthcheck 목적 pinning
# (예시로 언급된 pinning tag) :contentReference[oaicite:3]{index=3}
MINIO_VERSION=RELEASE.2023-10-25T06-33-25Z

# ===== Search (profile: search) =====
ELASTIC_VERSION=8.13.4
ELASTIC_JAVA_OPTS=-Xms512m -Xmx512m

# ===== Observability (profile: observability) =====
PROMETHEUS_RETENTION=7d
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD
