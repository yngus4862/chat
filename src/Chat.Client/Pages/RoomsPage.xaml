<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Chat.Client.Pages.RoomsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <VerticalStackLayout Padding="16" Spacing="12">
        <HorizontalStackLayout Spacing="8">
            <Button Text="Reload" Command="{Binding ReloadCommand}" />
            <Button Text="Create Room" Command="{Binding CreateRoomCommand}" />
            <Button Text="Sign In" Command="{Binding SignInCommand}" />
            <Button Text="Sign Out" Command="{Binding SignOutCommand}" />
        </HorizontalStackLayout>

        <CollectionView ItemsSource="{Binding Rooms}"
                        SelectionMode="Single"
                        SelectedItem="{Binding SelectedRoom, Mode=TwoWay}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10" ColumnDefinitions="*,Auto">
                        <Label Text="{Binding Name}" FontSize="16"/>
                        <Label Grid.Column="1" Text="{Binding Id}" FontSize="12" Opacity="0.6"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Label Text="{Binding Status}" Opacity="0.8"/>
    </VerticalStackLayout>
</ContentPage>